{
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"stylelint.validate": ["css", "less", "postcss", "astro"],
	"stylelint.snippet": ["css", "less", "postcss", "astro"],
	"[markdown]": {
		"editor.wordWrap": "on",
		"editor.codeActionsOnSave": {
			"source.fixAll.markdownlint": true
		}
	},
	"prettier.documentSelectors": ["**/*.astro"],
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"astro", // Enable .astro
		"typescript", // Enable .ts
		"typescriptreact"
	],
	"grammarly.selectors": [
		{
			"language": "markdown",
			"scheme": "file",
			"pattern": "src/content/post/uncopyright.md"
		}
	]
}
